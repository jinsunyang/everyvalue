        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Login</a></li>
      </ul>
    </div>
  </div>
</nav>
<div class="container">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>제목</th>
      <th>글쓴이</th>
      <th>평가액</th>
      <th>날짜</th>
    </tr>
    </thead>
    <tbody class="pointable">
    <% @subjects.each do |subject| %>
        <!--<tr class='subject-clickable-row' data-href=' subject_url(subject)'>-->
        <tr onclick="document.location='<%= subject_url(subject) %>';" >
          <td><%= subject.title %></td>
          <td><%= subject.user_nickname %></td>
          <td><%= subject.average_value %></td>
          <td><%= subject.updated_at %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
  <%= link_to 'New Subject', new_subject_path %>
</div>