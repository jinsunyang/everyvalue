                <%= c.attribute_fields do |a| %>
                    <%= a.attribute_select({ include_blank: false }, { class: 'selectpicker subject_search_select' }) %>
                <% end %>
                <%= c.predicate_select({ compounds: false }, { style: 'display: none;', class: 'subject_search_predicate_select' }) %>
